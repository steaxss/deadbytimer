{
  "name": "dbdtimer-steaxs",
  "version": "3.0.0",
  "private": true,
  "description": "DBD 1v1 Timer Overlay by Steaxs (Free)",
  "main": "electron/main.mjs",
  "author": "Steaxs",
  "license": "MIT",
  "type": "commonjs",
  "scripts": {
    "dev": "concurrently -k -n VITE,ELECTRON \"vite\" \"wait-on http://localhost:5173 && cross-env NODE_ENV=development electron .\"",
    "electron:dev": "npm run dev",
    "build": "vite build && npm run obfuscate:dist && electron-builder",
    "build:portable": "vite build && npm run obfuscate:dist && electron-builder --win portable",
    "build:installer": "vite build && npm run obfuscate:dist && electron-builder --win nsis",
    "build:dir": "vite build && npm run obfuscate:dist && electron-builder --win dir",
    "obfuscate:dist": "javascript-obfuscator dist --output dist --compact true --control-flow-flattening false --dead-code-injection false --string-array true --string-array-encoding base64 --string-array-threshold 0.5 --rename-properties false --target browser",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "dotenv": "^17.2.1",
    "electron-store": "^9.0.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "uiohook-napi": "^1.5.4",
    "zustand": "^4.5.2"
  },
  "devDependencies": {
    "@types/node": "^20.12.12",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.19",
    "concurrently": "^9.0.1",
    "cross-env": "^7.0.3",
    "electron": "^30.0.9",
    "electron-builder": "^24.13.3",
    "javascript-obfuscator": "^4.0.2",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.7",
    "typescript": "^5.5.4",
    "vite": "^5.4.19",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.steaxs.dbdtimer.free",
    "productName": "DBD Timer Overlay",
    "extraResources": [
      {
        "from": "build/icon.ico",
        "to": "icon.ico"
      },
      {
        "from": "native/xinput_bridge.exe",
        "to": "."
      }
    ],
    "directories": {
      "output": "release"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": "always",
      "createStartMenuShortcut": true,
      "deleteAppDataOnUninstall": true,
      "shortcutName": "DBD 1V1 Timer Overlay"
    },
    "files": [
      "dist/**",
      "electron/**",
      "package.json",
      "!**/*.map",
      "!**/*.ts",
      "!src/**"
    ],
    "asar": true,
    "asarUnpack": [
      "**/node_modules/uiohook-napi/**"
    ],
    "compression": "maximum",
    "win": {
      "icon": "build/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "artifactName": "DBD-Timer-Free-${version}-Setup.exe"
    }
  }
}
