{
  "name": "dbdoverlaytools-free",
  "version": "1.0.0",
  "private": true,
  "description": "DBD 1v1 Timer Overlay (Free)",
  "main": "electron/main.mjs",
  "author": "",
  "license": "MIT",
  "type": "commonjs",
  "scripts": {
    "dev": "concurrently -k -n VITE,ELECTRON \"vite\" \"wait-on http://localhost:5173 && cross-env NODE_ENV=development electron .\"",
    "electron:dev": "npm run dev",
    "build": "vite build && npm run obfuscate:dist && electron-builder",
    "build:portable": "vite build && npm run obfuscate:dist && electron-builder --win portable",
    "obfuscate:dist": "javascript-obfuscator dist --output dist --compact true --control-flow-flattening false --dead-code-injection false --string-array true --string-array-encoding rc4 --string-array-threshold 0.75 --rename-properties false --target browser-no-eval",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "electron-store": "^9.0.0",
    "lucide-react": "^0.539.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "uiohook-napi": "^1.5.4",
    "zustand": "^4.5.2"
  },
  "devDependencies": {
    "@types/node": "^20.12.12",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.19",
    "concurrently": "^9.0.1",
    "cross-env": "^7.0.3",
    "electron": "^30.0.9",
    "electron-builder": "^24.13.3",
    "javascript-obfuscator": "^4.0.2",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.7",
    "typescript": "^5.5.4",
    "vite": "^5.4.19",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.steaxs.dbdtimer.free",
    "productName": "DBD Timer Overlay",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**",
      "electron/**",
      "package.json",
      "!**/*.map",
      "!**/*.ts",
      "!src/**"
    ],
    "asar": true,
    "asarUnpack": [
      "**/node_modules/uiohook-napi/**"
    ],
    "compression": "maximum",
    "win": {
      "target": [
        { "target": "portable", "arch": [ "x64" ] }
      ],
      "artifactName": "DBD-Timer-Free-${version}-Portable.exe"
    }
  }
}
